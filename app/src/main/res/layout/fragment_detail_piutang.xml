<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bgform"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bginputtext" >

            <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:id="@+id/tv_nama_detail_utangf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zakaria"/>

                <TextView
                    android:id="@+id/tv_status_detail_utangf"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Belum Lunas"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:textSize="15sp"
                    android:id="@+id/tv_deskirpsi_detail_utangf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makan Warteg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/tv_tanggal_detail_utangf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28/09/2019"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bginputtext">

            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JUMLAH PINJAMAN"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_jumlah_detail_utangf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="Rp. 250000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SISA PINJAMAN"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_jumlahsisa_detail_utangf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="Rp. 250000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JENIS PEMBAYARAN"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cicil_utangf"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="CICILAN"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bgbtnpembayaran"
                    android:layout_width="120dp"
                    android:layout_height="45dp"/>

                <Button
                    android:id="@+id/btn_lunas_utangf"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:text="LUNAS"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bgbtnpembayaran"
                    android:layout_width="120dp"
                    android:layout_height="45dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CATATAN"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tv_catatan_utangf"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pinjaman ini dibayar dengan cara cicilan"
                android:textSize="13sp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JUMLAH"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/et_jumlahbayar_utangf"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bginput"
                android:hint="Masukkan jumlah"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#B5B5B5"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_bayar_utangf"
                android:text="SIMPAN"
                android:textColor="#FFFFFF"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bgbtn"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>