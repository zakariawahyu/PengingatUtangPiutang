<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".piutang.PiutangLunas">

    <ListView
        android:id="@+id/list_piutang_lunas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp">
    </ListView>

    <RelativeLayout
        android:id="@+id/empty_view_piutanglunas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lottie_piutanglunas"
            android:layout_marginTop="-90dp"
            android:text="Data masih kosong"
            android:textAlignment="center"
            android:textSize="18sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_piutanglunas"
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:layout_margin="85dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="629-empty-box.json"
            app:lottie_loop="true" />

    </RelativeLayout>

</RelativeLayout>